<%- include("../partials/header") %>

<div class="container mt-5">
    <h2 class="mb-4 text-center">Editar Filme</h2>

    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <form action="/filmes/edit/<%= filme.id %>" method="post">

                <div class="mb-3">
                    <label class="form-label">Título</label>
                    <input type="text" name="titulo" class="form-control" value="<%= filme.titulo %>" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Duração (minutos)</label>
                    <input type="number" name="duracao" class="form-control" value="<%= filme.duracao %>" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Classificação</label>
                    <input type="text" name="classificacao" class="form-control" value="<%= filme.classificacao %>">
                </div>

                <div class="mb-3">
                    <label class="form-label">Gênero</label>
                    <input type="text" name="genero" class="form-control" value="<%= filme.genero %>">
                </div>

                <div class="text-center">
                    <button class="btn btn-success w-50">Salvar Alterações</button>
                </div>

            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
