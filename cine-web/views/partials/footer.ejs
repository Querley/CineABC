<!-- Inicializa o carrossel de filmes usando Bootstrap -->
<script>
    // Seleciona o elemento do carrossel
    const myCarousel = document.querySelector('#carouselFilmes');

    // Cria uma instância do carrossel com opções
    new bootstrap.Carousel(myCarousel, {
        interval: 4000, // tempo em ms entre slides
        ride: "carousel" // inicia automaticamente o carrossel
    });
</script>

<!-- Inclui o bundle do Bootstrap (JS e Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

