<!-- Inclui o header padrão (evita repetir o cabeçalho em todas as páginas) -->
<%- include("../partials/header") %>

<div class="container mt-5">

    <!-- Título da página de listagem de salas -->
    <h2 class="mb-4 text-center">Salas Cadastradas</h2>

    <!-- Botão para cadastrar nova sala -->
    <div class="mb-3 text-center">
        <a href="/salas/create" class="btn btn-primary btn-lg">Cadastrar Nova Sala</a>
    </div>

    <!-- Tabela de salas -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark text-center">
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Capacidade</th>
                <th>Ações</th>
            </tr>
            </thead>

            <tbody>
            <% salas.forEach(sala => { %>
                <tr class="text-center">
                    <td><%= sala.id %></td>
                    <td><%= sala.nome %></td>
                    <td><%= sala.capacidade %></td>
                    <td>
                        <!-- Botão para editar a sala -->
                        <a href="/salas/edit/<%= sala.id %>" class="btn btn-warning btn-sm me-1">Editar</a>

                        <!-- Formulário para deletar a sala -->
                        <form action="/salas/delete/<%= sala.id %>" method="post" style="display:inline-block">
                            <button type="submit" class="btn btn-danger btn-sm">Deletar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>
</div>

<!-- Inclui o footer padrão (mantém o mesmo rodapé em todas as páginas) -->
<%- include("../partials/footer") %>
