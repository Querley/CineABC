<!-- Inclui o header padrão (evita repetir o cabeçalho em todas as páginas) -->
<%- include("../partials/header") %>

<div class="container mt-5">

    <!-- Título da página de cadastro de sala -->
    <h2 class="mb-4 text-center">Cadastrar Sala</h2>

    <!-- Card central contendo o formulário -->
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-body">

            <!-- Formulário de criação de sala -->
            <form action="/salas/create" method="post">

                <!-- Campo: Nome da sala -->
                <div class="mb-3">
                    <label class="form-label">Nome da Sala</label>
                    <input type="text" name="nome" class="form-control" required>
                </div>

                <!-- Campo: Capacidade -->
                <div class="mb-3">
                    <label class="form-label">Capacidade</label>
                    <input type="number" name="capacidade" class="form-control" required>
                </div>

                <!-- Botão de envio -->
                <div class="text-center">
                    <button class="btn btn-success w-50">Cadastrar</button>
                </div>

            </form>
        </div>
    </div>
</div>

<!-- Inclui o footer padrão (mantém o mesmo rodapé em todas as páginas) -->
<%- include("../partials/footer") %>
